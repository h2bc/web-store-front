{
  "name": "h2bc-web-dev",
  "image": "node:25",
  "workspaceFolder": "/workspace",
  "runArgs": ["--network=h2bc-web-dev"],
  "mounts": [
    "type=bind,source=${localWorkspaceFolder},target=/workspace",
    "source=${localEnv:SSH_AUTH_SOCK},target=/ssh-agent.sock,type=bind",
    "type=bind,source=${localEnv:HOME}/.codex-shared,target=/codex"
  ],
  "postCreateCommand": "pnpm i --frozen",
  "remoteEnv": {
    "SSH_AUTH_SOCK": "/ssh-agent.sock",
    "CODEX_HOME": "/codex"
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "username": "node"
    },
    "ghcr.io/devcontainers-extra/features/pnpm:2": {
      "version": "10"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "openai.chatgpt",
        "dbaeumer.vscode-eslint",
        "github.vscode-github-actions"
      ]
    }
  },
  "remoteUser": "node"
}
